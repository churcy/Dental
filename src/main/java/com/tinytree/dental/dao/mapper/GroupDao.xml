<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tinytree.dental.dao.GroupDao">

    <select id="getByConditions" resultType="java.util.HashMap" parameterType="java.util.HashMap">

        SELECT * FROM `group`
        WHERE 1=1

        <if test = "id != null and id != ''">
            AND id = #{id}
        </if>
        <if test = "userId != null and userId != ''">
           AND user_id = #{userId}
        </if>
        <if test = "groupName != null and groupName != ''">
            AND group_name = #{groupName}
        </if>

    </select>

    <resultMap id="groupMap" type="com.tinytree.dental.entity.Group">
        <id column="id" property="id"></id>
        <result column="group_name" property="groupName"></result>
        <result column="user_id" property="userId"></result>
        <result column="group_type" property="groupType"></result>
    </resultMap>
</mapper>